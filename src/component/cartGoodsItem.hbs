{{#each goodsBlock}}
  <div class='card m-3'>
    <div class='row'>
      <div class='col-2'>
        <img class='card-img-top pt-3' src='{{image}}' />
      </div>
      <div class='col-4 pt-3'>
        <h5>{{name}} </h5>
        <p>{{description}}</p>
      </div>

      <div class='col-2 pt-5'>
        <p>{{price.title}}</p>
        <b>{{price.value}}</b>
      </div>
      <div class='col-2 pt-5'>{{amount}}</div>
      <div class='col-2 pt-3'>
        {{#each buttons}}
          {{#if isPrimary}}
            <a class='btn btn-primary mb-3'>{{text}}</a>
          {{else}}

            {{#if isDanger}}
              <a class='btn btn-outline-danger'>{{text}}</a>
            {{/if}}
          {{/if}}
        {{/each}}
      </div>

    </div>
  </div>
{{/each}}