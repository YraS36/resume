<main>
  <div class='card'>
    <div class='nav'>
      {{#with navigation}}
        <p>{{Logo}}</p>
        {{#each links}}
          <a href='{{href}}' class='nav-link'>{{text}}</a>
        {{/each}}
      {{/with}}
    </div>
  </div>
  <br />


      {{#with newsBlock}}
        <h3 class='text-center'>{{title}}</h3>
        <hr />
        <section class='col-6 row'>
            {{#each cards}}
              <div class='card text-bg-dark'>
                <div class='card-footer'><h5>{{title}}
                  {{#if isTop}}
                      <span
                        class='badge text-bg-success rounded-pill text-capitalixe'
                      >Нове</span>
                  {{/if}}
                  {{#if isTop}}
                      <span
                        class='badge text-bg-danger rounded-pill text-capitalixe'
                      >Top</span>
                  {{/if}}</h5>
                </div>
                <hr color='#000' />
                <div class='card-body'>{{description}}
                </div>
              </div>
            {{/each}}
        </section>
      {{/with}}

    <br />

    <div class='nav nav-tabs'>
  {{#with goodsBlock}}
        {{#each tabs}}

          {{#if isActive}}
            <a href='#' class='nav-link active'>{{text}}</a>
          {{/if}}
          {{#if isDisabled}}<a
              href='#'
              class='nav-link'
            >{{text}}</a>{{/if}}
        {{/each}}
    </div>
    
    <br>

    <section class="row-1 col-6">
      {{#each cards}}
        <div class="card title">
          <img class="card-img-top" src="{{image}}">
          <h5>{{title}}
             {{#if isNew}}
            <span class='badge text-bg-info rounded-pill text-capitalixe'>Нове</span>
            {{/if}} 
          {{#if isHot}}       
                  <span class='badge text-bg-warning rounded-pill text-capitalixe'>HOT</span>
              {{/if}}
            </h5>
          <div class="card-body">
            {{description}}
          </div>
        </div>
      {{/each}}
    </section>
  {{/with}}
  <hr>
  {{#with subscribe}}
     <div class="card">
    <h2>{{header}}</h2>
    <p>{{description}}</p>
    {{#each buttons}}
    <div class="col-3">
      <button class="btn btn-primary ronded-pill ms-5" src="{{link}}">{{text}}</button>
      </div>
    {{/each}}
  </div>
  {{/with}}
  <hr>
  <section class="card text-center">
    {{#with service}}
    <p type="display-5">{{title}}</p>
    <p>{{description}}</p>
    {{#each buttons}}
    <button type="button" class="btn btn-primary" src="{{link}}">{{text}}</button>
    {{/each}}
    {{/with}}
  </section>
  <hr>
  {{#each footer}}
      <table>
         <th>
        <td>
          <a href='{{link}}' class='nav-link'>{{text}}</a>
        </td>
       </th>
      </table>
  {{/each}}
</main>
  

