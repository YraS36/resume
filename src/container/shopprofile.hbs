<main>
  <div>
    <h2>{{header}}</h2>
    <div class='nav nav-tabs'>
      {{#with purchase}}
        {{#each tabs}}
          <a href='#' class='nav-link active'>{{this}}</a>
        {{/each}}
    </div>   

        <div class='row mt-3'>
          <div class='col-4'>
            {{#with actionBlock}}
              <input
                class='form-control'
                placeholder='{{input.placeholder}}'/>
            
          </div>
          <div class="col-6">
            {{#each buttons}}
            {{#if isSuccess}}
             <a href='{{link}}' class='btn btn-success mx-2'>{{text}}</a>
             {{/if}}
             {{#if isOutline}}
             <a href='{{link}}' class='btn btn-outline-success'>{{text}}</a>
             {{/if}}
             {{#if isDanger}}
             <a href='{{link}}' class='btn btn-outline-danger'>{{text}}</a>
             {{/if}}
            {{/each}}
          </div>
            </div>
        {{/with}}

        {{#each itemList}}
  <div class='card'>
    <div class='row'>
      
      <div class='col-3 pt-3'>
        <p>{{number}} </p>
        <h5>{{status}}</h5>
      </div>

      <div class='col-2 '>
        <p>{{amount.title}}</p>
        <b>{{amount.value}}</b>
      </div>
      <div class='col-5'>
        {{#each images}}
         <img class="m-1" src="{{this}}" alt="photo" width="100px">
        {{/each}}
      </div>
      
      <div class='col-1 mt-4'>
        {{#with button}}
          {{#if isPrimary}}
            <a class='btn btn-primary mb-3' src="{{link}}">{{text}}</a>
          {{/if}}
        {{/with}}
      </div>

    </div>
  </div>
{{/each}}
